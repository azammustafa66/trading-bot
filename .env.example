# ======================
# TELEGRAM CONFIGURATION
# ======================
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
SESSION_NAME=telegram_session
TARGET_CHANNEL=@your_channel_username_or_id

# ======================
# DHAN API CONFIGURATION
# ======================
# Get these from your Dhan account
DHAN_CLIENT_ID=your_client_id_here
DHAN_ACCESS_TOKEN=your_access_token_here

# ======================
# SIGNAL PROCESSING
# ======================
# Time window (in minutes) to deduplicate similar signals
DEDUPE_WINDOW_MINUTES=60

# File paths for storing signals
SIGNALS_JSONL=data/signals.jsonl
SIGNALS_JSON=data/signals.json

# ======================
# LOGGING CONFIGURATION
# ======================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Maximum log file size in MB (logs will rotate)
MAX_LOG_SIZE_MB=50

# Number of backup log files to keep
LOG_BACKUP_COUNT=5
